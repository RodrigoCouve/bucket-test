{
    "version": "1.6.8",
    "license": "GPL-3.0",
    "homepage": "http://www.retroarch.com/",
    "architecture": {
        "64bit": {
            "url": "https://buildbot.libretro.com/stable/1.6.8/windows/x86_64/RetroArch.7z",
            "bin": [
                [
                    "retroarch.exe",
                    "retroarch"
                ]
            ],
            "shortcuts": [
                [
                    "retroarch.exe",
                    "RetroArch"
                ]
            ]
        },
        "32bit": {
            "url": "https://buildbot.libretro.com/stable/1.6.8/windows/x86/RetroArch.7z",
            "bin": [
                [
                    "retroarch.exe",
                    "retroarch"
                ]
            ],
            "shortcuts": [
                [
                    "retroarch.exe",
                    "RetroArch"
                ]
            ]
        }
    },
	"persist": [
		"assets",
		"cores",
		"playlists",
		"records",
		"saves",
		"screenshots",
		"shaders",
		"states",
		"system",
		"thumbnails",
		"retroarch.cfg"
	],
	"checkver": {
		"url": "http://www.retroarch.com/?page=platforms",
		"re": "The current stable version is: (\\d+\\.\\d+\\.\\d+)"
	},
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://buildbot.libretro.com/stable/$version/windows/x86_64/RetroArch.7z"
            },
            "32bit": {
                "url": "https://buildbot.libretro.com/stable/$version/windows/x86/RetroArch.7z"
            }
        }
	}
}
